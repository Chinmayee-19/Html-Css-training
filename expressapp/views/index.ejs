<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
        
    <script>
        function validate() {
            var uname = document.forms["userform"]["name"];
            var uemail = document.forms["userform"]["email"];
            var ucity = document.forms["userform"]["city"];

            if (uname.value == "") {
                window.alert("Please enter your name.");
                uname.focus();
                return false;
            }
      
            if (uemail.value == "") {
                window.alert(
                  "Please enter a valid e-mail address.");
                uemail.focus();
                return false;
            }
      
            if (ucity.value == "") {
                window.alert(
                  "Please enter your city.");
                ucity.focus();
                return false;
            }
      
            return true;
        }
    </script>
    <div class="container">
        <div class="card">
        <div class="card-body">
        <div>
            <header>Registration page</header>
            <form class="form" name="userform" method="POST" action="/adduser" >
                Name: <input type="text" class="form-control" name="name" >
                <br>
                Password:<input type="password" class="form-control" name="pass">
                <br>
                Email: <input type="email" class="form-control" name="email" >
                <br>
                City: <input type="text" class="form-control" name="city" >
                <br>
                <button onclick="return validate()" class="btn-outline-success">Register</button>
            </form>
            <footer>All rights are reserved.This is made by Chinmayee</footer>
        </div>
    </div>
    </div>

        <div>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">City</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0;i < udata.length;i++) { %>
                      <tr>
                        <td><%= udata[i].name %></td>
                        <td><%= udata[i].email %></td>
                        <td ><%= udata[i].city %></td>
                      </tr>
                    </tbody>
                    <%  } %>
                  </table>

        </div>
</div>
       
</body>
</html>